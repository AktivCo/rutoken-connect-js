{
    "root": true,
    "extends": "airbnb-base",
    "parser": "@babel/eslint-parser",
    "env": { "browser": true },
    "rules": {
        // Indent everything with 4 spaces
        "indent": ["error", 4],

        // Should not be strict and 120 is okay
        "max-len": ["warn", 120],

        // We use console, so disable this
        "no-console": 0
    },
    "settings": {
        "import/resolver": "webpack"
    }

}
